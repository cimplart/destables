    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: testfunc",
            "type": "python",
            "request": "launch",
            "module": "unittest",
            "console": "integratedTerminal",
            "args": [ "testfunc" ],
            "cwd": "${fileDirname}"
        },
        {
            "name": "Python: testtypes",
            "type": "python",
            "request": "launch",
            "module": "unittest",
            "console": "integratedTerminal",
            "args": [ "testtypes" ],
            "cwd": "${fileDirname}"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug ANTLR4 grammar",
            "type": "antlr-debug",
            "request": "launch",
            "input": "grtest.txt",
            "grammar": "grammar/C11.g4",
            "startRule": "translationUnit",
            "printParseTree": true,
            "visualParseTree": true
        }
    ]
}